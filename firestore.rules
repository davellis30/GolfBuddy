rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: anyone authenticated can read, only owner can write
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Friend Requests: participants can read, sender can create, receiver can update
    match /friendRequests/{requestId} {
      allow read: if request.auth != null
        && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.fromUserId;
      allow update: if request.auth != null
        && request.auth.uid == resource.data.toUserId;
      allow delete: if request.auth != null
        && request.auth.uid in resource.data.participants;
    }

    // Friendships: participants can read/delete, participants can create
    match /friendships/{friendshipId} {
      allow read: if request.auth != null
        && request.auth.uid in resource.data.userIds;
      allow create: if request.auth != null
        && request.auth.uid in request.resource.data.userIds;
      allow delete: if request.auth != null
        && request.auth.uid in resource.data.userIds;
    }

    // Weekend Statuses: anyone authenticated can read (visibility filtered client-side),
    // only owner can write/delete
    match /weekendStatuses/{statusId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null
        && request.auth.uid == statusId;
    }

    // Open Invites: visible friends can read, creator can create/cancel,
    // visible friends can update (join requests)
    match /openInvites/{inviteId} {
      allow read: if request.auth != null
        && request.auth.uid in resource.data.visibleToFriendIds;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.creatorId;
      allow update: if request.auth != null
        && request.auth.uid in resource.data.visibleToFriendIds;
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.creatorId;
    }

    // Conversations: only participants can read/write
    match /conversations/{convoId} {
      allow read: if request.auth != null
        && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null
        && request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null
        && request.auth.uid in resource.data.participants;
      allow delete: if request.auth != null
        && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        allow read, update: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(convoId)).data.participants;
        allow create: if request.auth != null
          && request.auth.uid == request.resource.data.senderId;
        allow delete: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(convoId)).data.participants;
      }
    }
  }
}
